{
  "base": {
    "wget": null,
    "unzip": null,
    "libsmi2-common": null,
    "dos2unix": null,
    "sshpass": null,
    "ncdu": null,
    "ufw": null
  },

  "snmp": {
    "snmp": null,
    "snmpd": {
      "snmpd.conf": "SNMPv2-MIB (RFC1213-MIB), IF-MIB, HOST-RESOURCES-MIB, UCD-SNMP-MIB, TCP-MIB, UDP-MIB"
    },
    "snmp-mibs-downloader": {
      "description": "download mibs"
    }
  },


  "bashrc": {
    "htstory_ts_add": {
      "commands": [
        "echo 'HISTTIMEFORMAT=\"%F %T  \"' >> ~/.bashrc",
        "source ~/.bashrc"
      ]
    }
  },

  "VM": {
    "qemu-guest-agent": null,

    "server_iso": {
        "cloud-init": "常規 iso 預設不含此套件"
    }
  },

  "Node": {
    "nfs": null
  },

  "monitoring": {
    "prometheus": {
      "node_exporter": {
        "version": "1.9.1",
        "port": 9100,
        "systemd": "prometheus_node_exporter.service"
      }
    }
  },

  "security": {
    "PAM": {
      "libpam-pwquality": {
        "settings": {
          "retry": 3,
          "minlen": 12,
          "ucredit": -1,
          "lcredit": -1,
          "dcredit": -1,
          "ocredit": -1,
          "enforce_for_root": true
        }
      },
      "login_defs": {
        "PASS_MAX_DAYS": 90,
        "PASS_MIN_DAYS": 1,
        "PASS_WARN_AGE": 7
      }
    }
  }
}

